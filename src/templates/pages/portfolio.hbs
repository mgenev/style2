   <!-- begin:header -->
    <section id="header" class="heading" style="background: url(assets/img/img03.jpg);">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="title-desc">
                        <h2>Our Portfolio /</h2>
                        <p>This is super duper awesomest work.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="overlay"></div>
    </section>
    <!-- end:header -->

<!-- begin:portfolio -->
<section id="portfolio" class="portfolio-page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <ul class="nav nav-pills portfolio-sort">
                  <li class="active" data-filter="*"><a href="#">All</a></li>
                  {{#each site.portfolio.categories}}
                  <li data-filter=".{{this}}"><a href="#">{{this}}</a></li>
                  {{/each}}
                </ul>

                <ul class="list-unstyled container-portfolio wrapper-portfolio">
                    {{#each site.portfolio.portfolio}}
                    <li class="{{categories}}">
                        <div class="portfolio-item">
                            <div class="portfolio-img" style="background: url(assets/img/{{img}}.jpg);"></div>
                            <div class="portfolio-caption">
                                <div class="portfolio-text">
                                    <h3>{{title}}</h3>
                                    <p>{{description}}</p>
                                    <a href="{{link}}" class="btn btn-info">View &raquo;</a>
                                </div>
                            </div>
                        </div>
                    </li>
                    {{/each}}                        
                </ul>
            </div>
        </div>
    </div>
</section>
<!-- end:portfolio -->

